{{log "HBS"}}
{{#each Search}}
<!-- CHANGED LINE 3 TO INSERT WATCHED AND RATING FOR EASIER SORTING -->
<div class='col-md-3 viewed-{{watched}} rating-{{rating}} movieInLib '>
    <button class='delete-movie' id='{{ imdbID }}'>
        <span class='glyphicon glyphicon-remove-circle'></span>
    </button>
  <img src='{{Poster}}' class='img-responsive'>
  <div>{{ Title }}</div>
  <div>{{ Year }}</div>
  <div>{{ Actors }}</div>
  {{#if watched}}
    <span class='glyphicon glyphicon-ok'></span>
  {{else}}
  <button class='watched-movie' id='{{ imdbID }}'>
      <span class='glyphicon glyphicon-eye-open'></span>
  </button>
  {{/if}}
  <input class='stars' id='{{ imdbID }}' value='{{rating}}' data-rate="{{rating}}" data-stars='10' data-size="xs" data-max="10" data-step="1" data-showCaption="false"/>
</div>
{{/each}}

