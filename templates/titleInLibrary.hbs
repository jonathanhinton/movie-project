{{#each Search}}
<div class='col-md-3' id="movie">
    <button class='delete-movie' id={{ imdbID }}>
        <span class='glyphicon glyphicon-remove-circle'></span>
    </button>
  <img src='{{Poster}}' class='img-responsive'>
  <div>{{ Title }}</div>
  <div>{{ Year }}</div>
  <div>{{ Actors }}</div>
  {{#if watched}}
    <span class='glyphicon glyphicon-ok'></span>
  {{else}}
  <button class='watched-movie' id={{ imdbID }}>
      <span class='glyphicon glyphicon-eye-open'></span>
  </button>
  {{/if}}
  <input class='stars' id={{ imdbID }} />
</div>
{{/each}}

